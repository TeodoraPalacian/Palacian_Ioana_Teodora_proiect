@page "/{id:int?}"
@model Palacian_Ioana_Teodora_proiect.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Produse";
}

<h1>Produse</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Producator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Distribuitor.NumeDistribuitor)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Product[0].ProductCategories)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductD.Produse) {
    string selectedRow = "";
    if (item.ID == Model.ProductID)
    {
        selectedRow = "table-success";
    }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distribuitor.NumeDistribuitor)
            </td>
            <td>
                @{ 
                    foreach(var category in item.ProductCategories)
                    {
                        @category.Categorie.ID @: @category.Categorie.NumeCategorie<br/>
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
