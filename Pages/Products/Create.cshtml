@page
@model Palacian_Ioana_Teodora_proiect.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Nume" class="control-label"></label>
                <input asp-for="Product.Nume" class="form-control" />
                <span asp-validation-for="Product.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Producator" class="control-label"></label>
                <input asp-for="Product.Producator" class="form-control" />
                <span asp-validation-for="Product.Producator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Pret" class="control-label"></label>
                <input asp-for="Product.Pret" class="form-control" />
                <span asp-validation-for="Product.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ReleaseDate" class="control-label"/>
                <input asp-for="Product.ReleaseDate" class="form-control"/>
                <span asp-validation-for="Product.ReleaseDate" class="text-danger"/>
            </div>
            <div class="form-group">
                <label asp-for="Product.DistribuitorID" class="control-label">Nume Distribuitor</label>
                <select asp-for="Product.DistribuitorID" class="form-control" asp-items="ViewBag.DistribuitorID"></select>
                <span asp-validation-for="Product.DistribuitorID" class="text-danger"></span>
             </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{ 
                                int cnt = 0;
                                foreach(var cat in Model.AssignedCategoryDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCourses"
                                               value="@cat.CategoryID"
                                               @Html.Raw(cat.Assigned?"checked=\"checked\"":"")/>
                                        @cat.CategoryID @: @cat.Name
                                    @:</td>
                                }
                                @:</tr>
                            }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
